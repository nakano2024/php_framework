DirectorySlash On

<IfModule mod_rewrite.c>

    RewriteEngine On
    #URLの末尾が/でない場合、/にする
    RewriteCond %{REQUEST_URI} !/$
    RewriteCond %{REQUEST_URI} !\.[^/\.]+$
    RewriteRule .* %{REQUEST_URI}/ [R=307,L]
    #URLにファイル名が含まれていない時、index.phpにアクセスするようにする
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php [QSA,L]

</IfModule>